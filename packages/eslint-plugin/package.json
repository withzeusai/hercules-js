{
  "name": "@usehercules/eslint-plugin",
  "version": "1.0.40",
  "description": "ESLint plugin for Hercules",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist",
    "src",
    "docs",
    "README.md",
    "tsconfig.json",
    "tsdown.config.ts"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@typescript-eslint/scope-manager": "^8.51.0",
    "@typescript-eslint/type-utils": "^8.51.0",
    "@typescript-eslint/utils": "^8.51.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@typescript-eslint/rule-tester": "^8.51.0",
    "eslint": "^9.39.2",
    "tsdown": "^0.18.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@typescript-eslint/parser": ">=8.0.0",
    "eslint": ">=9.0.0",
    "typescript": ">=4.0.0"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/withzeusai/hercules-js.git",
    "directory": "packages/eslint-plugin-hercules"
  },
  "module": "./dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  }
}
